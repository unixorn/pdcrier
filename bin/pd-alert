#!/usr/bin/env python3
#
# Create a pagerduty alert
#
# Copyright 2022, Joe Block <jpb@unixorn.net>

import argparse
import logging
import os
import sys

from pdcrier.utils import readYAMLFile


def parseCLI():
    """
    Parse the command line options
    """
    parser = argparse.ArgumentParser()
    parser.add_argument("-d", "--debug", help="Debug setting", action="store_true")
    parser.add_argument(
        "-l",
        "--log-level",
        type=str.upper,
        help="set log level",
        choices=["DEBUG", "INFO", "ERROR", "WARNING", "CRITICAL"],
        default="INFO",
    )
    if "HOME" in os.environ:
        parser.add_argument(
            "--settings-file",
            "-s",
            type=str,
            default=f"{os.environ.get('HOME')}/.hass-tools/pagerduty.yaml",
        )
    else:
        parser.add_argument(
            "--settings-file", "--settings", "-s", type=str, default="pdcrier.yaml"
        )

    cli = parser.parse_args()
    loglevel = getattr(logging, cli.log_level.upper(), None)
    logFormat = "[%(asctime)s][%(levelname)8s][%(filename)s:%(lineno)s - %(funcName)20s() ] %(message)s"
    logging.basicConfig(level=loglevel, format=logFormat)
    logging.info("Set log level to %s", cli.log_level.upper())
    logging.debug(f"cli: {cli}")
    return cli


def main():
    """
    Main program driver
    """
    cli = parseCLI()
    settings = readYAMLFile(cli.settings_file)
    logging.debug(f"settings: {settings}")

if __name__ == "__main__":
    main()
